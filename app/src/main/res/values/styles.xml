<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        		<item name="android:windowBackground">@color/background</item>
        		<item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

	<style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
	   	<item name="android:background">@color/theme_color</item>
        <item name="android:backgroundStacked">@color/theme_color</item>
        <item name="android:backgroundSplit">@color/theme_color</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        </style>
    
	<style name = "dialpad_button_number">
		<item name = "android:layout_width">@dimen/dialpad_number_width</item>
		<item name = "android:layout_height">@dimen/dialpad_button_height</item>
		<item name = "android:textSize">@dimen/dialpad_number_size</item>
		<item name = "android:textColor">@color/theme_color</item>
		<item name = "android:gravity">center_vertical|right</item>
		<item name = "android:background">@android:color/transparent</item>
		<item name = "android:onClick">dialpadButtonPressed</item>
	</style>
	
	<style name = "dialpad_button_text">
		<item name = "android:layout_width">@dimen/dialpad_text_width</item>
		<item name = "android:layout_height">@dimen/dialpad_button_height</item>
		<item name = "android:textSize">@dimen/dialpad_text_size</item>
		<item name = "android:textColor">@color/dialpad_text_color</item>
		<item name = "android:background">@android:color/transparent</item>
		<item name = "android:gravity">center_vertical|left</item> 
		<item name = "android:onClick">dialpadButtonPressed</item>
	</style>
</resources>
